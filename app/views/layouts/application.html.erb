<!DOCTYPE html>
<html>
<head>
  <title>vision</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
</head>
<body>


 <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-brand">
        <%= link_to "Vision Board", root_path %>
      </div>
      <% if user_signed_in? %>
        
        <ul class="nav navbar-nav navbar-right">
          <li> <%= link_to "Add Vision", new_vision_path %> </li>

          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-menu-hamburger"></span> </a>
            <ul class="dropdown-menu"> 
            <li>
              <%= link_to "Settings", edit_user_registration_path %>
            </li>
            <li>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
            </li>
            </ul>
          </li>
        </ul>

      <% else %>
        <ul class="nav navbar-nav navbar-right">
            <li> <%= link_to "Log In", new_user_session_path %> </li>
            <li> <%= link_to "Sign Up", new_user_registration_path %> </li>
        </ul>
      <% end %>
    </div>
  </nav>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    
<%= yield %>

</body>
</html>