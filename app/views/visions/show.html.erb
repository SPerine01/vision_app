<h2 class="show-text"> <%= @vision.title %> </h2>
<p class="show-text"> <%= @vision.goal %> </p>

<div class="container">
    <div class="row row-centered">
		<div class="col-md-4 col-md-offset-4">
			<div class="panel-body">
				<div class="row text-center">
					<%= image_tag @vision.photo.url(:medium) %>
				</div>
			</div>

			<br>
			<div class="row text-center">
				<button class="btn btn-default"> <%= link_to "Back", visions_path %> </button>

				<button class="btn btn-default"> <%= link_to "Edit", edit_vision_path %> </button>

				<button class="btn btn-default">
				<%= link_to "Remove", vision_path, method: :delete, data: { confirm: "This is permanent. Are you sure?" } %>
				</button>
			</div>
		</div>
  	</div>
</div>