<%= form_for @vision, html: { multipart: true } do |f| %>
	<div class="my-form">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div class="my-form">
		<%= f.label :goal %>
		<%= f.text_area :goal %>
	</div>

	<div class="button">
		<%= f.button :submit, class: "btn btn-info" %>
	</div>
<% end %>