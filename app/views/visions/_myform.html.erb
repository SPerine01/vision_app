<%= form_for @vision, html: { multipart: true } do |f| %>
<!-- 	div.
 -->	<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :goal %>
			<%= f.text_area :goal, class: "form-control"  %>
		</div>
	

		<div class="form-group">
			<%= f.label :photo %>
			<%= f.file_field :photo, class: "btn btn-default" %>
